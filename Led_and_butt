//  Код для включения светодиода с помощью кнопки, через флаги
  boolean butt_flag = 0;  // создаем переменную флага кнопки
  boolean led_flag = 0;  // переменная флага для светодиода
  boolean butt;  // переменная принимающая текущее положение кнопки
  byte last_press;  // переменная для задержки

 void setup() {
  pinMode(3, INPUT_PULLUP);  // подключаем кнопку на 4 порт
  Serial.begin(9600);  // подключаем работу с СОМ поротом
  pinMode(4,OUTPUT);  // подключили светодиод
}

 void loop() {
   butt = !digitalRead(3);  // Считываем текущее положение кнопки
  if(butt == 1 && butt_flag == 0 && millis() - last_press > 50){  // (Если кнопка нажата и флаг опущен, то...
   butt_flag = 1;  // флаг поднимается
   Serial.println("Button pressed")  // выдать в СОМ порт сообщение о работе первой функции Іf
   led_flag = !led_flag;  // присваеваем флагу светодиода обратное самому себе значение
   digitalWrite(13,led_flag);  // подаем напряжение
   last_press = millis();  // задаем переменной задержки команду millis 
  }

  if(butt == 0 && butt_flag == 1){  // если кнопка 0, а флаг 1
   butt_flag = 0;  // опустить флаг
  }
}
